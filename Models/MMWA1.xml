      <z-m> 0.06379 </z-m>
    </offsets>
  </model>
  <model>
    <path>light/GreenLight.xml</path>
    <offsets>
      <x-m>0.20634 </x-m>
      <y-m> 2.72818</y-m>
      <z-m> 0.06379 </z-m>
    </offsets>
  </model>

